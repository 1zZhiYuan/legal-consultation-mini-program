.container {
  display: flex;
  flex-direction: column;
  height: 100vh;
  background-color: #f5f5f5;
}

.chat-header {
  background-color: #f8f8f8;
  padding: 20rpx;
  text-align: center;
}

.lawyer-name {
  font-size: 32rpx;
  font-weight: bold;
}

.chat-messages {
  flex: 1;
  padding: 20rpx;
}

.message {
  max-width: 70%;
  padding: 10rpx 20rpx;
  margin-bottom: 20rpx;
  border-radius: 10rpx;
}

.user-message {
  background-color: #007aff;
  color: white;
  padding: 10rpx;
  border-radius: 5rpx;
  margin-left: auto;
  max-width: 70%;
  word-wrap: break-word;
}

.lawyer-message {
  align-self: flex-start;
  background-color: #f0f0f0;
}

.message-input {
  display: flex;
  padding: 20rpx;
  background-color: #f8f8f8;
}

.message-input input {
  flex: 1;
  padding: 10rpx;
  border: 1rpx solid #ddd;
  border-radius: 5rpx;
}

.message-input button {
  margin-left: 20rpx;
}

.message-list {
  flex: 1;
  padding: 10rpx;
  overflow-y: auto;
}

.message-item {
  display: flex;
  align-items: center;
  margin-bottom: 10rpx;
}

.avatar {
  width: 60rpx; /* 调整头像宽度 */
  height: 60rpx; /* 调整头像高度 */
  border-radius: 30rpx;
  margin: 0 10rpx;
}

.system-message {
  background-color: #e5e5ea;
  color: black;
  padding: 10rpx;
  border-radius: 5rpx;
  margin-right: auto;
  max-width: 70%;
  word-wrap: break-word;
}

.input-section {
  display: flex;
  padding: 10rpx;
  background-color: white;
  border-top: 1rpx solid #ddd;
}

.input {
  flex: 1;
  padding: 10rpx;
  border: 1rpx solid #ddd;
  border-radius: 5rpx;
  margin-right: 10rpx;
}

.send-button {
  background-color: #007aff;
  color: white;
  padding: 10rpx 20rpx;
  border-radius: 5rpx;
}
