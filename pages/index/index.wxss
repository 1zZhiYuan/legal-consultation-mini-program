.container {
  padding: 20rpx;
  background-color: #f5f5f5;
}

.banner {
  width: 100%;
  height: 300rpx; /* 设置合适的高度 */
}

.banner-image {
  width: 100%;
  height: 100%;
  object-fit: cover; /* 确保图片按比例填充 */
}

@keyframes fadeIn {
  from { opacity: 0; }
  to { opacity: 1; }
}

.section {
  width: 100%;
  margin-bottom: 30rpx;
  background-color: #fff;
  border-radius: 10rpx;
  box-shadow: 0 2rpx 10rpx rgba(0, 0, 0, 0.1);
  padding: 20rpx;
  transition: transform 0.3s ease, box-shadow 0.3s ease;
}

.section:hover {
  transform: translateY(-10rpx);
  box-shadow: 0 4rpx 20rpx rgba(0, 0, 0, 0.2);
}

.section-title {
  font-size: 18px;
  font-weight: bold;
  margin-bottom: 10rpx;
  color: #333;
}

.lawyer-item, .issue-item {
  margin: 10rpx 0;
  padding: 10rpx;
  border-radius: 5rpx;
  background-color: #f8f8f8;
  transition: background-color 0.3s ease;
}

.lawyer-item:hover, .issue-item:hover {
  background-color: #e0e0e0;
}

.assessment-content {
  display: flex;
  flex-direction: column;
  align-items: center;
  text-align: center;
}

.assessment-description {
  font-size: 16px;
  color: #666;
  margin-bottom: 15rpx;
}

.assessment-image {
  width: 100%;
  height: 200rpx;
  border-radius: 10rpx;
  margin-bottom: 15rpx;
}

.assessment-button {
  background-color: #4CAF50;
  color: white;
  padding: 10rpx 20rpx;
  border-radius: 5rpx;
}
