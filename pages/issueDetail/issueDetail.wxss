.container {
  padding: 20rpx;
  background-color: #f8f8f8;
}

.issue-item {
  margin-bottom: 20rpx;
  padding: 20rpx;
  background-color: #fff;
  border-radius: 10rpx;
  box-shadow: 0 2px 8px rgba(0, 0, 0, 0.1);
}

.question {
  font-size: 32rpx;
  font-weight: bold;
  color: #333;
  margin-bottom: 10rpx;
}

.answer {
  font-size: 28rpx;
  color: #666;
}
